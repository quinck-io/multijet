{
    "name": "multijet-core",
    "private": true,
    "workspaces": [
        "microservices/*",
        "libs/*"
    ],
    "scripts": {
        "ts": "esr",
        "build": "npm run openapi:generate && turbo run build",
        "build:nocache": "npm run openapi:generate && turbo run build --force",
        "build:debug": "turbo run build:debug",
        "lint": "turbo run lint",
        "lint:fix": "turbo run lint:fix",
        "test": "npm run openapi:generate && turbo run test --parallel",
        "clean": "turbo run clean && rm -rf .aws-sam node_modules",
        "typecheck": "turbo run typecheck",
        "openapi:generate": "turbo run openapi:generate",
        "presam:build": "turbo run build -- -- lambda",
        "sam:build": "sam build -t deploy/aws/sam/template.yaml --parallel",
        "sam:generate-env": "npm run ts deploy/aws/scripts/create-json-env.ts .env deploy/aws/sam/.env.json",
        "presam:start": "npm run sam:build && npm run sam:generate-env",
        "sam:start": "sam local start-api -t deploy/aws/sam/template.yaml --env-vars deploy/aws/sam/.env.json",
        "docker:build": "npm run ts deploy/docker/scripts/build-microservices.ts",
        "docker:push": "npm run ts deploy/docker/scripts/push-microservices.ts"
    },
    "dependencies": {
        "@quinck/collections": "^0.3.1",
        "awilix": "^8.0.1",
        "execa": "^7.2.0",
        "fastify": "^4.21.0",
        "http-status-codes": "^2.2.0",
        "joi": "^17.9.2"
    },
    "devDependencies": {
        "@types/chai": "^4.3.5",
        "@types/mocha": "^10.0.1",
        "@types/node": "^20.4.8",
        "@typescript-eslint/eslint-plugin": "^6.3.0",
        "chai": "^4.3.7",
        "chai-as-promised": "^7.1.1",
        "esbuild": "^0.18.20",
        "esbuild-plugin-copy": "^2.1.1",
        "esbuild-runner": "^2.2.2",
        "eslint": "^8.46.0",
        "eslint-config-prettier": "^9.0.0",
        "mocha": "^10.2.0",
        "turbo": "^1.10.12",
        "typescript": "^5.1.6"
    }
}
