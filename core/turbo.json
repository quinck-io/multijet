{
    "pipeline": {
        "typecheck": {
            "dependsOn": ["^typecheck", "^openapi:generate"]
        },
        "build": {
            "dependsOn": ["^build", "typecheck"],
            "outputs": ["dist/**"]
        },
        "build:debug": {
            "dependsOn": ["^build:debug", "typecheck"]
        },
        "openapi:generate": {
            "cache": false
        },
        "clean": {
            "cache": false
        }
    },
    "globalDependencies": ["tsconfig.base.json"]
}
